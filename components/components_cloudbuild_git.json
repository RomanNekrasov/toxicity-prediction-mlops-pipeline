{
 "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-data-ingestor:0.0.1",
        "./components/toxic-data-ingestor"
      ]
    },
	{
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-data-cleaner:0.0.1",
        "./components/toxic-data-cleaner"
      ]
    },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-train-test-split:0.0.1",
        "./components/toxic-train-test-split"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-multilabel-trainer:0.0.1",
        "./components/toxic-multilabel-trainer"
      ]
    },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-predictor:0.0.1",
        "./components/toxic-predictor"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-data-ingestor:0.0.1"
      ]
    },
	{
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-data-cleaner:0.0.1"
      ]
    },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-train-test-split:0.0.1"
      ]
    },
	 {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-multilabel-trainer:0.0.1"
      ]
    },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/toxic-predictor:0.0.1"
      ]
    },
   {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud secrets versions access latest --secret=github-ssh-key > /root/.ssh/id_github"
      ],
      "volumes": [
        {
          "name": "ssh",
          "path": "/root/.ssh"
        }
      ]
    },
    {
      "name": "gcr.io/cloud-builders/git",
      "entrypoint": "bash",
      "args": [
        "-c",
        "chmod 600 /root/.ssh/id_github && cat <<EOF >/root/.ssh/config\nHostname github.com\nIdentityFile /root/.ssh/id_github\nEOF && ssh-keyscan -t rsa github.com > /root/.ssh/known_hosts"
      ],
      "volumes": [
        {
          "name": "ssh",
          "path": "/root/.ssh"
        }
      ]
    },
    {
      "name": "gcr.io/cloud-builders/git",
      "entrypoint": "bash",
      "args": [
        "-c",
        "echo \"Cloning repo ...\" && git clone --depth 1 git@github.com:RomanNekrasov/DataEngineering.git && echo \"data uploaded\" >> components/history.txt && echo \"Pushing changes to git repo ...\" && git config --global user.name RomanNekrasov && git config --global user.email romanvanriessen@gmail.com && git add -A && git commit -m \"data uploaded\" && git push origin master"
      ],
      "volumes": [
        {
          "name": "ssh",
          "path": "/root/.ssh"
        }
      ]
    }
 ]
}